@model KitchenModel

@{
    ViewData["Title"] = "Kitchen";
}

<h3>@ViewData["Title"]</h3>

<div class="container">
<div class="row">
    <div class="col-md-1">
        <p>Date: </p>
    </div>
    <div class="col-md-5">
        <input type="date" id="date" name="date" />
    </div>
    <div class="col-md-6">
        <button onclick="location.href = '@Url.Action("Details","BreakfastOrders")?id=' + document.getElementById('date').value.toString()" class="btn btn-primary">Get information for choosen date</button>

    </div>
</div>

<br />
<br />

<div class="row">
    <div class="col-md-6">
        <p>Expected number of guests: </p>
    </div>
    <div class="col-md-6">
        <table border="1">
            <tr>
                <th></th>
                <th>Counts</th>
            </tr>
            <tr>
                <td><strong>Adults</strong></td>
                <td>
                    @Html.DisplayFor(model => model.TotalAdultsForChosenDate)
                </td>
            </tr>
            <tr>
                <td><strong>Children</strong></td>
                <td>
                    @Html.DisplayFor(model => model.TotalChildrenForChosenDate)
                </td>
            </tr>
            <tr>
                <td><strong>Total</strong></td>
                <td>
                    @Html.DisplayFor(model => model.TotalForChosenDate)
                </td>
            </tr>
        </table>
    </div>
</div>

<br />
<br />

<div class="row">
    <div class="col-md-6">
        <p>Checked In Children</p>  
    </div>
    <div class="col-md-6">
        <input type="number" id="checkedInChildren" value="@Html.DisplayFor(model => model.TotalChildrenCheckedIn)" readonly />
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-6">
        <p>Checked In Adults</p>
    </div>
    <div class="col-md-6">
        <input type="number" id="checkedInAdults" value="@Html.DisplayFor(model => model.TotalChildrenCheckedIn)" readonly />
    </div>
</div>

<br />
<br />

<div class="row">
    <div class="col-md-6">
        <p>Not checked in guests yet </p>
    </div>
    <div class="col-md-6">
        <table border="1">
            <tr>
                <th></th>
                <th>Counts</th>
            </tr>
            <tr>
                <td><strong>Adults</strong></td>
                <td>@Html.DisplayFor(model => model.NotCheckedInAdults)</td>
            </tr>
            <tr>
                <td><strong>Children</strong></td>
                <td>@Html.DisplayFor(model => model.NotCheckedInChildren)</td>
            </tr>
            <tr>
                <td><strong>Total</strong></td>
                <td>@Html.DisplayFor(model => model.NotCheckedInTotal)</td>
            </tr>
        </table>
    </div>
</div>

</div>
