@model IEnumerable<Morgenmadsbuffeten.Models.BreakfastOrder>
@{
    ViewData["Title"] = "Reception Overview";
}

    <div class="container">
        <header >
            <h1>Overview</h1>
        </header>
        <div class="row">
            <div class="col-md-3">
                <nav>
                    <a href="/Home/ReceptionOverview">Overview</a>
                    <br />
                    <br />
                    <a href="/Home/ReceptionAddGuests">Add Guests</a>
                </nav>
            </div>
            <div class="col-md-6" >
                <div>
                    <table>

                        <tr>
                            <th width="100">Room</th>
                            <th width="100">Adults</th>
                            <th width="100">Children</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            @if (item.Date == DateTime.Now.Date)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => item.RoomNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.CheckedInAdults)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.CheckedInChildren)
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
            <div class="col-md-2">
                <p>@DateTime.Now.Date.ToShortDateString()</p>
            </div>
        </div>
    </div>
